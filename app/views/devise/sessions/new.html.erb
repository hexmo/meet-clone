<div class="container-fluid vh-100 d-flex justify-content-center align-items-center">
  <div class="col col-12 col-md-6 col-lg-3">
    <div class="card p-4">
      <div class="card-body">
        <div class="text-center">
          <%= image_tag '/img/google_meet_horizontal.png', height: '28' %>
          <h4 class="fw-normal my-3 mb-2">Sign in</h4>
          <p>Use your email account</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
          <% if alert.present? %>
            <div class="alert alert-danger small p-1" role="alert">
              <%= alert %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: 'form-control'
            %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: 'form-label' %>
            <%= f.password_field :password,
              autocomplete: "current-password",
              class: 'form-control'
            %>
          </div>

          <div class="d-flex justify-content-between mb-3">
            <% if devise_mapping.rememberable? %>
              <div class="form-check">
                <%= f.check_box :remember_me, class: 'form-check-input' %>
                <%= f.label :remember_me, class: 'form-check-label' %>
              </div>
            <% end %>
            <%= f.submit "Sign in", class: 'btn btn-primary' %>
          </div>

          <div class="d-flex justify-content-between pt-3 small">
            <%= link_to 'Forgot your password?', new_user_password_path %>
            <%= link_to 'Sign Up', new_user_registration_path %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
